{
    "name": "node-express-template",
    "version": "0.1.0",
    "description": "node.js server template",
    "main": "bin/index.js",
    "scripts": {
        "test": "nyc mocha -r ts-node/register tests/**/*.spec.ts --exit --timeout=30000",
        "serve": "nodemon -e ts --delay 1500ms --exec \"npm run compile\"",
        "start": "cd bin && node index",
        "compile": "npm run build && npm start",
        "build": "tsc --resolveJsonModule --declaration",
        "prettier": "prettier --single-quote --write \"./{src,tests}/**/*.{ts,js}\"",
        "prettier:check": "prettier --single-quote --list-different \"./{src,tests}/**/*.{ts,js}\"",
        "refresh:vsToken": "vsts-npm-auth -config .npmrc"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.0",
        "@types/connect-redis": "0.0.11",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/csurf": "^1.9.36",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/hapi__joi": "^15.0.4",
        "@types/helmet": "0.0.44",
        "@types/hpp": "^0.2.1",
        "@types/lodash": "^4.14.138",
        "@types/mocha": "^5.2.7",
        "@types/mongodb": "^3.5.26",
        "@types/node": "^12.7.4",
        "@types/object-hash": "^1.3.0",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.5",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "rimraf": "^3.0.0",
        "supertest": "^4.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.2",
        "vsts-npm-auth": "^0.37.0"
    },
    "dependencies": {
        "@hapi/joi": "^15.1.1",
        "body-parser": "^1.19.0",
        "connect-redis": "^4.0.2",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "csurf": "^1.10.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "express-session": "^1.16.2",
        "helmet": "^3.21.0",
        "hpp": "^0.2.2",
        "http-status": "^1.3.2",
        "lodash": "^4.17.15",
        "mongodb": "^3.6.0",
        "mongoose": "^5.9.10",
        "request": "^2.88.2",
        "rypock-utilities": "file:../../utilities",
        "stoppable": "^1.1.0",
        "uuid": "^3.3.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/robk-dev/rypock.git"
    },
    "author": "Robert Kardjaliev",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/robk-dev/rypock/issues"
    },
    "homepage": "https://github.com/robk-dev/rypock#readme",
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier -s",
            "commit-msg": "commitlint -E",
            "pre-push": "npm test"
        }
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "lcov",
            "json",
            "html",
            "cobertura"
        ]
    }
}
