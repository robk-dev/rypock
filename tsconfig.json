{
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "newLine": "CRLF",
        "target": "es2017",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "lib": ["dom", "es5", "es6", "es7"],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "exclude": ["node_modules", "./**/*.spec.ts"]
}