{
    "name": "@rypock/express-backend",
    "version": "0.0.0",
    "description": "Basic express template",
    "author": "robk <robk@robk.dev>",
    "homepage": "https://github.com/robk-dev/rypock#readme",
    "license": "ISC",
    "main": "index.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/robk-dev/rypock.git"
    },
    "scripts": {
        "test": "nyc mocha -r ts-node/register tests/**/*.spec.ts --exit --timeout=30000",
        "serve": "nodemon -e ts --delay 1500ms --exec \"npm run compile\"",
        "start": "cd bin && node index",
        "compile": "npm run build && npm start",
        "build": "tsc",
        "precommit": "lint-staged"
    },
    "bugs": {
        "url": "https://github.com/robk-dev/rypock/issues"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.0",
        "@types/connect-redis": "0.0.11",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/csurf": "^1.9.36",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/hapi__joi": "^15.0.4",
        "@types/helmet": "0.0.44",
        "@types/hpp": "^0.2.1",
        "@types/lodash": "^4.14.138",
        "@types/mocha": "^5.2.7",
        "@types/mongodb": "^3.5.26",
        "@types/node": "^12.7.4",
        "@types/object-hash": "^1.3.0",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.5",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "rimraf": "^3.0.0",
        "supertest": "^4.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.2",
        "vsts-npm-auth": "^0.37.0"
    },
    "dependencies": {
        "@hapi/joi": "^15.1.1",
        "@rypock/nosql": "0.0.4",
        "@rypock/redis": "0.0.4",
        "@rypock/shared": "0.0.4",
        "@rypock/utils": "0.0.4",
        "@rypock/winston-logger": "0.0.4",
        "body-parser": "^1.19.0",
        "connect-redis": "^4.0.2",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "csurf": "^1.10.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "express-session": "^1.16.2",
        "helmet": "^3.21.0",
        "hpp": "^0.2.2",
        "http-status": "^1.3.2",
        "lodash": "^4.17.15",
        "mongodb": "^3.6.0",
        "mongoose": "^5.9.10",
        "request": "^2.88.2",
        "stoppable": "^1.1.0",
        "uuid": "^3.3.3"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "lcov",
            "json",
            "html",
            "cobertura"
        ]
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "prettier --ignore-path --single-quote --write"
        ],
        "src/**/*{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
            "prettier --ignore-path --parser json --write"
        ],
        "src/**/*.{html,md,yml}": [
            "prettier --ignore-path --single-quote --write"
        ]
    }
}
