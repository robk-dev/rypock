{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "lib",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "types": [
            "node"
        ],
        "newLine": "CRLF",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}