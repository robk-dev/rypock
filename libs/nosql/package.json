{
    "name": "@rypock/nosql",
    "version": "0.0.4",
    "description": "Mongo Repo Wrapper",
    "author": "robk <robk@robk.dev>",
    "homepage": "https://github.com/robk-dev/rypock#readme",
    "license": "MIT",
    "main": "lib/index.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/robk-dev/rypock.git"
    },
    "scripts": {
        "test": "nyc mocha -r ts-node/register __tests__/**/*.spec.ts --timeout 20000 --exit",
        "build": "tsc",
        "precommit": "lint-staged"
    },
    "bugs": {
        "url": "https://github.com/robk-dev/rypock/issues"
    },
    "dependencies": {
        "@rypock/shared": "^0.0.4",
        "mongodb": "^3.3.2"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "prettier --ignore-path --single-quote --write"
        ],
        "src/**/*{*.json,.{babelrc,eslintrc,prettierrc,stylelintrc}}": [
            "prettier --ignore-path --parser json --write"
        ],
        "src/**/*.{html,md,yml}": [
            "prettier --ignore-path --single-quote --write"
        ]
    },
    "devDependencies": {
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/mongodb": "^3.5.27",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "mocha": "^8.1.3",
        "nyc": "^15.1.0",
        "ts-node": "^9.0.0"
    }
}
