{
    "name": "@rypock/winston-logger",
    "version": "0.1.1",
    "description": "Basic winston logger",
    "author": "robk <robk@robk.dev>",
    "homepage": "https://github.com/robk-dev/rypock#readme",
    "license": "ISC",
    "main": "lib/index.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/robk-dev/rypock.git"
    },
    "scripts": {
        "test": "nyc mocha -r ts-node/register __tests__/**/*.spec.ts --timeout 20000 --exit",
        "precommit": "lint-staged",
        "build": "tsc"
    },
    "bugs": {
        "url": "https://github.com/robk-dev/rypock/issues"
    },
    "dependencies": {
        "@rypock/shared": "file:../shared",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "prettier --ignore-path --single-quote --write"
        ],
        "src/**/*.{json}": [
            "prettier --ignore-path --parser json --write"
        ],
        "src/**/*.{html,md,yml}": [
            "prettier --ignore-path --single-quote --write"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "lcov",
            "json",
            "html",
            "cobertura"
        ]
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "mocha": "^8.1.3",
        "nyc": "^15.1.0"
    }
}
