{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "newLine": "CRLF",
    "target": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "commonjs",
    "outDir": "./bin",
    "declaration": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "declarationDir": "./bin",
    "lib": ["dom", "es5", "es6", "es7"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "./test/**/*.ts"],
  "include": ["./src/**/*.ts"]
}
